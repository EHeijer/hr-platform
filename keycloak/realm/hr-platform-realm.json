{
  "realm": "hr-platform",
  "enabled": true,
  "displayName": "HR Platform",

  "loginTheme": "keycloak",
  "accountTheme": "keycloak",
  "adminTheme": "keycloak",

  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": false,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": false,
  "editUsernameAllowed": false,

  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrator"
      },
      {
        "name": "HR",
        "description": "HR role"
      },
      {
        "name": "EMPLOYEE",
        "description": "Employee role"
      }
    ]
  },

  "clients": [
    {
      "clientId": "gateway-client",
      "name": "Gateway Client",
      "enabled": true,

      "protocol": "openid-connect",
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",

      "secret": "gateway-secret",

      "redirectUris": [
        "http://localhost:8081/*"
      ],
      "webOrigins": [
        "http://localhost:8081"
      ],

      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,

      "attributes": {
        "post.logout.redirect.uris": "http://localhost:8081/*"
      },

      "protocolMappers": [
        {
          "name": "roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "user.attribute": "foo",
            "access.token.claim": "true",
            "id.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        },
        {
          "name": "username",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-property-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "username",
            "claim.name": "preferred_username",
            "jsonType.label": "String",
            "access.token.claim": "true",
            "id.token.claim": "true"
          }
        }
      ]
    }
  ],

  "users": [
    {
      "username": "admin-user",
      "email": "admin-user@mail.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",

      "credentials": [
        {
          "type": "password",
          "value": "admin",
          "temporary": false
        }
      ],

      "realmRoles": [
        "ADMIN",
        "HR"
      ]
    },
    {
      "username": "hr-user",
      "email": "hr-user@mail.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Hr",
      "lastName": "User",

      "credentials": [
        {
          "type": "password",
          "value": "hr",
          "temporary": false
        }
      ],

      "realmRoles": [
        "HR"
      ]
    },
    {
      "username": "employee-1",
      "email": "employee-1@mail.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Carl",
      "lastName": "Andersson",

      "credentials": [
        {
          "type": "password",
          "value": "user",
          "temporary": false
        }
      ],

      "realmRoles": [
        "EMPLOYEE"
      ]
    }
  ],
  
  "eventsEnabled": true,
  "eventsListeners": [
    "jboss-logging",
    "user-sync-listener"
  ],
  "enabledEventTypes": [
    "LOGIN",
    "LOGOUT",
    "REGISTER",
    "UPDATE_PROFILE",
    "UPDATE_PASSWORD"
  ],
  "adminEventsEnabled": true,
  "adminEventsDetailsEnabled": true

}
